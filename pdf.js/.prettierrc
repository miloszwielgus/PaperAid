{
  "arrowParens": "avoid",

  "endOfLine": "lf",

  "printWidth": 80,

  "semi": true,

  "tabWidth": 2,

  "useTabs": false,

  "trailingComma": "es5",

  "singleQuote": true,

  "bracketSpacing": true,

  "jsxBracketSameLine": false,

  "overrides": [
    {
      "files": ["tsconfig.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "printWidth": 100,
        "proseWrap": "always"
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
